rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Dados PRIVADOS - apenas o próprio utilizador pode ler/escrever
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Coleção de viagens (privada)
      match /trips/{tripId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Dados PÚBLICOS (se necessário criar leaderboard público)
    match /public_stats/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

